<%= render "shared/header" %>

<div class="new-user">
  <h2>登録しているユーザーでログインします</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", placeholder:"ここにメールアドレスを入力", autofocus: true %>
    </div>
  
    <div class="field">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", placeholder:"ここにパスワードを入力" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "ログイン", class:"login-btn" %>
    </div>
  <% end %>
  
  <%= render "users/shared/links" %>
</div>
